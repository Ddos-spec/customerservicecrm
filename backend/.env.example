# Backend (Node.js)
SESSION_SECRET=replace_with_random_secret
ENCRYPTION_KEY=replace_with_64_char_hex
REDIS_URL=redis://localhost:6379
PORT=3000
FRONTEND_URL=http://localhost:5173
MASTER_API_KEY=replace_if_needed

# Gateway access from backend
WA_GATEWAY_URL=http://127.0.0.1:3001/api/v1/whatsapp
WA_GATEWAY_PASSWORD=replace_with_gateway_password

# Go WA Gateway runtime
AUTH_JWT_SECRET=replace_with_jwt_secret
# If empty, will use WA_GATEWAY_PASSWORD
AUTH_BASIC_PASSWORD=
AUTH_BASIC_USERNAME=gateway
SERVER_ADDRESS=127.0.0.1
SERVER_PORT=3001
HTTP_BASE_URL=/api/v1/whatsapp
WEBHOOK_URL=http://127.0.0.1:3000/api/v1/webhook/incoming
WHATSAPP_DATASTORE_TYPE=postgres
WHATSAPP_DATASTORE_URI=postgres://user:pass@host:5432/whatsapp?sslmode=disable
